@import "nib"
@import "vars"
@import "mixins"

*
  box-sizing border-box

html
body
  height 100%

body
  position: relative
  height: 100%;
  margin 0
  min-width: 320px
  font-family f-regular
  font-size 14px
  font-weight 400
  color text-color
  line-height 1.4
  overflow-x: hidden
  overflow-y auto
  font-smoothing antialiased
  scroll-behavior smooth
  background-color white
  @media (max-width: max-large)
    font-size: 12px;
  p
    margin-bottom: 19px;
    margin-top: 0;

img
  max-width 100%
  height: auto

em
  font-style italic

strong
  font-weight bold

ol
  padding: 0 0 0 18px;
  margin: 0;

a
  color accent-color
  text-decoration: none
  transition color .3s ease-in-out
  &:hover
    color accent-color-dark

main
  min-height: 600px;
  @media (max-width: max-medium)
    min-height: 500px;

h1
  margin: 23px 0;
  line-height: 1.4;
  font-family f-bold
  font-size: 34px;
  @media (max-width: max-medium)
    font-size: 22px;

h2
  margin: 20px 0;
  line-height: 1.4;
  font-family: f-bold
  font-size: 32px;
  @media (max-width: max-medium)
    font-size: 22px;

h3
  font-size 25px
  font-family: f-bold
  line-height: 1.4;
  margin: 31px 0;
  @media (max-width: max-medium)
    font-size: 22px;

h4
  font-size 24px
  font-family f-bold
  line-height: 1.4;
  margin: 15px 0;
  @media (max-width: max-medium)
    font-size: 22px;

h5
  font-size 20px
  font-family f-bold
  line-height: 1.4;
  margin: 15px 0;

h6
  font-size 18px
  font-family f-bold
  line-height: 1.4;
  margin: 15px 0;


blockquote
  position relative
  margin: 18px 40px 6px;
  padding: 8px 0;
  font-weight: 500;
  &:before
    font-family: FontAwesome;
    content: "\f10d";
    position: absolute;
    left: -20px;
    top: 0;
  &:after
    font-family: FontAwesome;
    content: "\f10e";
    position: absolute;
    right: -20px;
    bottom: 8px;

.code, kbd, samp
  font-family: inherit;
  font-size: inherit;

input.error,
textarea.error
  border-color: #ff9e9e !important;

body input:focus:required:invalid,
body textarea:focus:required:invalid
  color: grey

body input:required:valid,
body textarea:required:valid
  color: grey

